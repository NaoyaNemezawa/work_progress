<div class="sign_image vw-100 vh-100">
<%= image_tag "1268526_s.jpg"%>
  <div class="w-60 pt-4 mx-auto">
    <div class="entry">
      <h2>WorkProgressにログインする</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"outline w-50" %>
        </div>

        <div>
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password",class:"outline w-50" %>
        </div>

        <%= f.submit "ログイン",class:"bg-primary text-white my-2 rounded border-0" %>
      <% end %>
      <%= link_to "まだアカウントをお持ちでない方", new_registration_path(resource_name)%>
    </div>
  </div>
</div>